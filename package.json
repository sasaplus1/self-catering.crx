{
  "dependencies": {
    "mustache": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "imagemin-cli": "^5.1.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^8.0.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.0",
    "prettier": "^1.19.1",
    "rollup": "^2.0.0",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "cp ./src/*.css ./lib",
    "build:html": "cp ./src/*.html ./lib",
    "build:js": "rollup -c",
    "build:json": "node -p 'JSON.stringify(require(`./src/manifest`), null, 2)' > ./lib/manifest.json",
    "build:png": "imagemin --out-dir=./lib --plugin=pngquant ./src/*.png",
    "build:svg": "imagemin --out-dir=./lib --plugin=svgo ./src/*.svg",
    "fix": "run-s fix:*",
    "fix:css": "stylelint --cache --fix ./src/**/*.css",
    "fix:js": "eslint --fix .",
    "fixpack": "npx fixpack",
    "lint": "run-s lint:*",
    "lint:css": "stylelint --cache ./src/**/*.css",
    "lint:js": "eslint --cache .",
    "release": "zip -j ./self-catering.zip ./lib/*",
    "watch": "run-p -l watch:*",
    "watch:css": "onchange -v 'src/*.css' -- run-s build:css",
    "watch:html": "onchange -v 'src/*.html' -- run-s build:html",
    "watch:js": "onchange -v 'src/*.js' -- run-s build:js",
    "watch:json": "onchange -v 'src/manifest.js' -- run-s build:json",
    "watch:png": "onchange -v 'src/*.png' -- run-s build:png",
    "watch:svg": "onchange -v 'src/*.svg' -- run-s build:svg"
  }
}
